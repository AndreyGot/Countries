{% extends 'base.html.twig' %}

{% block body %}
    <h1>Country</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ country.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ country.text }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-info" href="{{ path('country_index') }}" role="button">Back to the list</a>
        </li>
        <li>
            <a  class="btn btn-success" 
                href="{{ path('country_edit', { 'id': country.id }) }}" role="button">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
